# Application
NODE_ENV=development
PORT=3000
APP_NAME=Enterprise NestJS Backend
APP_VERSION=1.0.0
APP_TIMEZONE=Asia/Shanghai

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Database
DATABASE_URL="mysql://root:password@localhost:3306/enterprise_db"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_ACCESS_SECRET=your-super-secret-jwt-access-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-change-this-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Logging
LOG_LEVEL=info                    # 日志级别：debug, info, warn, error
LOG_DIR=logs                      # 日志文件存储目录（相对或绝对路径）
LOG_MAX_SIZE=20m                  # 单个日志文件最大大小
LOG_MAX_FILES=14d                 # 日志文件保留时间
LOG_DATE_PATTERN=YYYY-MM-DD       # 日志文件日期格式
LOG_ZIPPED_ARCHIVE=true           # 是否压缩归档旧日志文件

# Database Logging
# 数据库日志全局开关（文件日志始终启用）
# - true: 所有请求都记录到数据库（开发环境推荐，便于调试）
# - false: 默认不记录，只对使用 @EnableDatabaseLog() 装饰器的接口记录（生产环境推荐）
# 优先级：方法装饰器 > 类装饰器 > 全局配置
# 详见文档：docs/modules/logging.md
LOG_ENABLE_DATABASE=false         # 是否全局启用数据库日志（默认 false）
LOG_DB_RETENTION_DAYS=30          # 数据库日志保留天数

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# File Upload
MAX_FILE_SIZE=10485760

# Email (if needed later)
MAIL_HOST=
MAIL_PORT=587
MAIL_USER=
MAIL_PASS=
MAIL_FROM=

# External Services (if needed later)
SMS_API_KEY=
SMS_API_SECRET=
