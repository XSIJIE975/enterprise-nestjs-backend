# ============================================================================
# 生产环境配置 (Production)
# ============================================================================

# 应用基础配置
NODE_ENV=production
PORT=8002
HOST=0.0.0.0
APP_NAME=Enterprise NestJS Backend
APP_VERSION=1.0.0
API_PREFIX=api/v1
TZ=Asia/Shanghai
APP_TIMEZONE=Asia/Shanghai

# CORS配置 (生产环境需要严格配置)
ALLOWED_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com

# 请求体大小限制配置
# 注意：这些限制只针对 JSON、表单等非文件上传的请求
# 文件上传的限制在下方 "文件上传配置" 部分
BODY_LIMIT_JSON=10mb                           # JSON 请求体大小限制
BODY_LIMIT_URLENCODED=10mb                     # URL 编码表单大小限制
BODY_LIMIT_RAW=10mb                            # 原始数据大小限制
BODY_LIMIT_TEXT=1mb                            # 文本数据大小限制

# 数据库配置 (生产环境请使用强密码)
# Docker 部署时，DATABASE_URL 会被 docker-compose 覆盖为内部网络地址
DATABASE_URL=mysql://app_user:app_password@localhost:3306/enterprise_db
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=app_user
DB_PASSWORD=app_password
DB_DATABASE=enterprise_db
DB_ROOT_PASSWORD=prod_root_password
DB_LOGGING=false
DB_SYNCHRONIZE=false

# 缓存配置
# CACHE_TYPE: 缓存类型选择
#   - 'redis': 使用 Redis 缓存，连接失败时自动降级为内存缓存（推荐生产环境）
#   - 'memory': 强制使用内存缓存（分布式部署下会导致数据不一致，不推荐）
#   - 'auto': 自动选择，优先 Redis，失败时降级为内存缓存（推荐开发环境）
# 注意：生产环境建议确保 Redis 服务可用，避免降级为内存缓存导致分布式不一致
CACHE_TYPE=redis

# Redis配置 (生产环境请使用密码)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=enterprise:prod:

# JWT配置 (生产环境必须使用强密钥)
JWT_ACCESS_SECRET=production-super-secret-jwt-access-key-change-this-in-real-production-64-chars-min
JWT_REFRESH_SECRET=production-super-secret-jwt-refresh-key-change-this-in-real-production-64-chars
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=enterprise-nestjs-backend
JWT_AUDIENCE=enterprise-nestjs-backend

# 日志配置
LOG_LEVEL=warn                    # 生产环境只记录警告和错误
LOG_DIR=logs                      # 日志目录
LOG_MAX_SIZE=50m                  # 单个日志文件最大大小
LOG_MAX_FILES=30d                 # 日志文件保留时间
LOG_DATE_PATTERN=YYYY-MM-DD       # 日志文件日期格式
LOG_ZIPPED_ARCHIVE=true           # 生产环境压缩归档
LOG_ENABLE_CONSOLE=true           # 输出到控制台（Docker 环境需要）

# 数据库日志配置
# 生产环境建议全局禁用，只对关键接口启用（使用 @EnableDatabaseLog() 装饰器）
LOG_ENABLE_DATABASE=false         # 启用数据库日志
LOG_DB_RETENTION_DAYS=90          # 数据库日志保留天数

# 限流配置
THROTTLE_SHORT_TTL=1000           # 1秒
THROTTLE_SHORT_LIMIT=20           # 20次/秒
THROTTLE_MEDIUM_TTL=60000         # 1分钟
THROTTLE_MEDIUM_LIMIT=200         # 200次/分钟
THROTTLE_LONG_TTL=3600000         # 1小时
THROTTLE_LONG_LIMIT=2000          # 2000次/小时

# 文件上传配置
# ============================================================================
# 基础配置
UPLOAD_DEST=/app/uploads                           # 上传文件存储目录（容器内路径）
UPLOAD_TEMP_DIR=/app/uploads/temp                  # 临时文件目录
UPLOAD_PRESERVE_ORIGINAL_NAME=false                # 是否保留原始文件名

# 通用上传限制（生产环境适当放宽）
UPLOAD_MAX_FILE_SIZE=20971520                      # 单个文件最大: 20MB
UPLOAD_MAX_FILES=5                                 # 单次请求最多文件数
UPLOAD_MAX_TOTAL_SIZE=104857600                    # 单次请求总大小: 100MB
UPLOAD_ALLOWED_MIMETYPES=image/jpeg,image/jpg,image/png,image/webp,application/pdf

# 图片上传配置
UPLOAD_IMAGE_MAX_SIZE=10485760                     # 图片最大: 10MB
UPLOAD_IMAGE_ALLOWED_TYPES=image/jpeg,image/jpg,image/png,image/webp
UPLOAD_IMAGE_SUB_DIR=images                        # 图片子目录
UPLOAD_IMAGE_ENABLE_COMPRESSION=true               # 是否启用压缩
UPLOAD_IMAGE_COMPRESSION_QUALITY=85                # 压缩质量
UPLOAD_IMAGE_MAX_WIDTH=1920                        # 最大宽度
UPLOAD_IMAGE_MAX_HEIGHT=1920                       # 最大高度

# 文档上传配置
UPLOAD_DOCUMENT_MAX_SIZE=20971520                  # 文档最大: 20MB
UPLOAD_DOCUMENT_ALLOWED_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document
UPLOAD_DOCUMENT_SUB_DIR=documents                  # 文档子目录

# 视频上传配置（生产环境限制更严格）
UPLOAD_VIDEO_MAX_SIZE=52428800                     # 视频最大: 50MB
UPLOAD_VIDEO_ALLOWED_TYPES=video/mp4
UPLOAD_VIDEO_SUB_DIR=videos                        # 视频子目录

# 音频上传配置
UPLOAD_AUDIO_MAX_SIZE=10485760                     # 音频最大: 10MB
UPLOAD_AUDIO_ALLOWED_TYPES=audio/mpeg,audio/mp3
UPLOAD_AUDIO_SUB_DIR=audios                        # 音频子目录

# 头像上传配置
UPLOAD_AVATAR_MAX_SIZE=1048576                     # 头像最大: 1MB（生产环境更严格）
UPLOAD_AVATAR_ALLOWED_TYPES=image/jpeg,image/jpg,image/png,image/webp
UPLOAD_AVATAR_SUB_DIR=avatars                      # 头像子目录
UPLOAD_AVATAR_ENABLE_COMPRESSION=true              # 启用压缩
UPLOAD_AVATAR_COMPRESSION_QUALITY=90               # 压缩质量（更高）
UPLOAD_AVATAR_WIDTH=200                            # 头像宽度（像素）
UPLOAD_AVATAR_HEIGHT=200                           # 头像高度（像素）

# 安全配置（生产环境加强）
UPLOAD_ENABLE_VIRUS_SCAN=true                      # 启用病毒扫描（生产环境开启）
UPLOAD_VERIFY_FILE_TYPE=true                       # 验证文件真实类型
UPLOAD_DENIED_EXTENSIONS=.exe,.bat,.cmd,.com,.pif,.scr,.vbs,.js,.jar,.sh,.msi,.app

# 存储配置（生产环境建议使用云存储）
UPLOAD_STORAGE_TYPE=local                          # 存储类型: local | s3 | oss | cos
UPLOAD_LOCAL_PATH=/app/uploads                     # 本地存储路径
UPLOAD_LOCAL_URL_PREFIX=https://yourdomain.com/uploads  # 文件访问URL前缀

# S3 存储配置（生产环境推荐）
UPLOAD_S3_ENDPOINT=
UPLOAD_S3_BUCKET=
UPLOAD_S3_REGION=
UPLOAD_S3_ACCESS_KEY_ID=
UPLOAD_S3_SECRET_ACCESS_KEY=
UPLOAD_S3_URL_PREFIX=

# 阿里云 OSS 配置
UPLOAD_OSS_ENDPOINT=
UPLOAD_OSS_BUCKET=
UPLOAD_OSS_REGION=
UPLOAD_OSS_ACCESS_KEY_ID=
UPLOAD_OSS_ACCESS_KEY_SECRET=
UPLOAD_OSS_URL_PREFIX=

# 腾讯云 COS 配置
UPLOAD_COS_SECRET_ID=
UPLOAD_COS_SECRET_KEY=
UPLOAD_COS_BUCKET=
UPLOAD_COS_REGION=
UPLOAD_COS_URL_PREFIX=

# 安全配置 (生产环境高强度)
BCRYPT_ROUNDS=12
SESSION_SECRET=production-session-secret-key-change-this-in-real-production
CSRF_SECRET=production-csrf-secret-key-change-this-in-real-production
MAX_CONCURRENT_SESSIONS=5         # 最大并发登录设备数 (1-10, 设置为1实现单设备登录)

# 邮件配置 (生产环境真实配置)
MAIL_HOST=smtp.yourdomain.com
MAIL_PORT=587
MAIL_USER=noreply@yourdomain.com
MAIL_PASS=MAIL_PASSWORD_HERE
MAIL_FROM=noreply@yourdomain.com

# 外部服务配置 (生产环境真实API)
SMS_API_KEY=PRODUCTION_SMS_API_KEY
SMS_API_SECRET=PRODUCTION_SMS_API_SECRET