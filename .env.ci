# CI/CD 环境配置
NODE_ENV=test
PORT=8001

# 健康检查配置
# 磁盘剩余空间阈值 (字节) - 默认 1GB
HEALTH_DISK_THRESHOLD=1073741824
# 堆内存阈值 (字节) - 默认 500MB
HEALTH_MEMORY_HEAP=524288000
# RSS内存阈值 (字节) - 默认 800MB
HEALTH_MEMORY_RSS=838860800

# 数据库配置（GitHub Actions Services）
DATABASE_URL="mysql://root:test_root_password@localhost:3306/nestjs_test"
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=nestjs_test
DB_USERNAME=root
DB_ROOT_PASSWORD=test_root_password

# Redis 配置（GitHub Actions Services）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT 配置（测试密钥）
JWT_SECRET=test-jwt-secret-for-ci-cd-pipeline-must-be-at-least-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=test-jwt-refresh-secret-for-ci-cd-pipeline-must-be-at-least-32-chars
JWT_REFRESH_EXPIRES_IN=30d

# 日志配置
LOG_LEVEL=error
LOG_TO_FILE=false
LOG_DIR=./logs

# 时区配置
TZ=Asia/Shanghai
DEFAULT_TIMEZONE=Asia/Shanghai

# CORS 配置
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:8001

# 限流配置
THROTTLE_SHORT_TTL=1000
THROTTLE_SHORT_LIMIT=100
THROTTLE_MEDIUM_TTL=60000
THROTTLE_MEDIUM_LIMIT=1000
THROTTLE_LONG_TTL=3600000
THROTTLE_LONG_LIMIT=10000

# 文件上传
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# 邮件配置（测试环境可以为空）
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=test@example.com
MAIL_PASSWORD=test_password
MAIL_FROM="Test <test@example.com>"
