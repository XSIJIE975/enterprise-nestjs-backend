// 系统配置相关模型

/// 系统配置表 - 存储系统的各种配置参数和设置
model SystemConfig {
  /// 配置ID - 主键，自增
  id          Int      @id @default(autoincrement())
  /// 配置键名 - 唯一，用于标识配置项（如"app.name"）
  key         String   @unique
  /// 配置值 - 存储配置的具体值
  value       String
  /// 配置描述 - 说明配置项的用途和作用
  description String?
  /// 值类型 - 配置值的数据类型（string、number、boolean、json）
  type        String   @default("string") // string, number, boolean, json
  /// 是否公开 - true表示可通过API公开访问，false表示仅内部使用
  isPublic    Boolean  @default(false)
  /// 配置状态 - true表示启用，false表示禁用
  isActive    Boolean  @default(true)
  /// 创建时间 - 配置项创建时间
  createdAt   DateTime @default(now())
  /// 更新时间 - 配置项最后修改时间
  updatedAt   DateTime @updatedAt

  @@map("system_configs")
}